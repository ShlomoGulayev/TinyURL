@page
@model IndexModel
@{
    ViewData["Title"] = "Url Shortener";
}

<h2>URL Shortener</h2>

<form method="post">
    <div class="form-group">
        <label for="longUrl">Enter Long URL:</label>
        <input type="text" class="form-control" id="longUrl" name="longUrl">
    </div>
    <button type="submit" class="btn btn-primary">Generate Short URL</button>
</form>

@if (ViewData["ShortUrl"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        Your Short URL is: <a href="@ViewData["ShortUrl"]">@ViewData["ShortUrl"]</a>
    </div>
}